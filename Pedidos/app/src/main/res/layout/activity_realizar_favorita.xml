<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:textAlignment="center"
    tools:context=".ActivityRealizarFavorita">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="Elige los ingredientes de tu favorita"
        android:textAlignment="center"
        android:textColor="#FFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnRealizarFavorita"
        android:layout_width="215dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#02A807"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Confirmacion"
        android:textColor="#FFFFFF" />

    <CheckBox
        android:id="@+id/cbQueso"
        style="@android:style/Widget.Holo.Light.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="154dp"
        android:text="Queso"
        android:textColor="#FFFF"
        android:textColorLink="@android:color/holo_red_dark" />

    <CheckBox
        android:id="@+id/cbCebolla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cbQueso"
        android:layout_alignParentEnd="true"
        android:text="Cebolla"
        android:textColor="#FFFF"
        android:textColorLink="@android:color/holo_red_dark" />

    <CheckBox
        android:id="@+id/cbTomate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cbQueso"
        android:layout_centerHorizontal="true"
        android:text="Tomate"
        android:textColor="#FFFF"
        android:textColorLink="@android:color/holo_red_dark" />

    <CheckBox
        android:id="@+id/cbPollo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbQueso"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="33dp"
        android:text="Pollo"
        android:textColor="#FFFF"
        android:textColorLink="@android:color/holo_red_dark" />

    <CheckBox
        android:id="@+id/cbTernera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cbPollo"
        android:layout_centerHorizontal="true"
        android:text="Ternera"
        android:textColor="#FFFF"
        android:textColorLink="@android:color/holo_red_dark" />

    <CheckBox
        android:id="@+id/cbMaiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cbPollo"
        android:layout_alignParentEnd="true"
        android:text="Maiz"
        android:textColor="#FFFF"
        android:textColorLink="@android:color/holo_red_dark" />

    <CheckBox
        android:id="@+id/cbPimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbPollo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="34dp"
        android:text="Pimiento"
        android:textColor="#FFFF"
        android:textColorLink="@android:color/holo_red_dark" />

    <CheckBox
        android:id="@+id/cbBacon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cbPimiento"
        android:layout_alignParentEnd="true"
        android:text="Bacon"
        android:textColor="#FFFF"
        android:textColorLink="@android:color/holo_red_dark" />

    <CheckBox
        android:id="@+id/cbAtun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbPollo"
        android:layout_alignStart="@+id/cbTomate"
        android:layout_marginTop="34dp"
        android:text="Atun"
        android:textColor="#FFFF"
        android:textColorLink="@android:color/holo_red_dark" />

</RelativeLayout>