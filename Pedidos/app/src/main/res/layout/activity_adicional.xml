<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".ActivityAdicional">

    <CheckBox
        android:id="@+id/cbQueso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="151dp"
        android:text="Queso"
        android:textColor="#FFFFFF"
        android:textColorLink="@android:color/holo_red_dark"
        tools:textSize="18sp" />

    <CheckBox
        android:id="@+id/cbJamonYork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="204dp"
        android:text="York"
        android:textColor="#FFFFFF"
        android:textColorLink="@android:color/holo_red_dark"
        tools:textSize="18sp" />

    <CheckBox
        android:id="@+id/cbTernera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="254dp"
        android:text="Ternera"
        android:textColor="#FFFFFF"
        android:textColorLink="@android:color/holo_red_dark"
        tools:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="Selecciona hasta 2 ingredientes extras"
        android:textColor="#FFFF"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/cbChorizo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cbQueso"
        android:layout_centerHorizontal="true"
        android:text="Chorizo"
        android:textColor="#FFFF" />

    <CheckBox
        android:id="@+id/cbJamon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cbQueso"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="Jamon"
        android:textColor="#FFFF" />

    <CheckBox
        android:id="@+id/cbBarbacoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cbQueso"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:text="Barbacoa"
        android:textColor="#FFFF" />

    <CheckBox
        android:id="@+id/cbSalami"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignBottom="@+id/cbQueso"
        android:text="Salami"
        android:textColor="#FFFF" />

    <CheckBox
        android:id="@+id/cbPollo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignBottom="@+id/cbQueso"
        android:layout_marginBottom="-51dp"
        android:text="Pollo"
        android:textColor="#FFFF" />

    <CheckBox
        android:id="@+id/cbCarbonara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignBottom="@+id/cbQueso"
        android:layout_marginBottom="-104dp"
        android:text="Carbonara"
        android:textColor="#FFFF" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="215dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="152dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#02A807"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Siguiente"
        android:textColor="#FFFF" />

</RelativeLayout>